@model WebWallet.Models.TransactionModel;

@using WebWallet.Controllers
@using WebWallet.Models
@{
    var balance = TempData["Balance"];
    var key = TempData["key"];
    var date= TempData["Date"];
   
    TempData.Keep("Balance");
    TempData.Keep("key"); 
    TempData.Keep("Date"); 

}



<div class="container">
   
    <div class="d-grid gap-2 col-6 mx-auto">
            <form asp-action="Generate" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
              <h2 class="text-center">Send transaction </h2>
                <hr />
           

             <label asp-for="Input" class="control-label">Input</label>
            <input asp-for="Input" value=@key class="form-control" />
            <span asp-validation-for="Input" class="text-danger"></span>
            
             <label asp-for="Output" class="control-label">Output</label>
            <input asp-for="Output" class="form-control" />
            <span asp-validation-for="Output" class="text-danger"></span>
           
           
           <label asp-for="Amount" class="control-label">Amount</label>
            <input asp-for="Amount" class="form-control" />
            <span asp-validation-for="Amount" class="text-danger"></span>
            
           <label asp-for="CreationTime" class="control-label">Date</label>
            <input asp-for="CreationTime" value=@date class="form-control" />
            <span asp-validation-for="CreationTime" class="text-danger"></span>
            
            <br />
            <br />
            @using (Html.BeginForm("Import/CreateTransaction"))
            {
                <div class="d-grid gap-2 col-6 mx-auto">
                    <button class="btn btn-success" formaction="CreateTransaction" type="submit">Send</button>
                </div>
            }

        </form>
        </div>
        
        </div>
    

 




 


